<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.SendDocFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Envio de documentos"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivTakePhotoDocs"
            style="@style/styleIVCameraSendDocs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spDocType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"

            />

        <EditText
            android:id="@+id/etIDNumberSendDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:drawableStart="@drawable/ic_badge_light"
            android:hint="Numero de documento" />

        <EditText
            android:id="@+id/etNamesSendDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:hint="Nombres"

            />

        <EditText
            android:id="@+id/etLastNameSendDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:hint="Apellidos" />

        <EditText
            android:id="@+id/etEmailSendDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:hint="Correo" />

        <EditText
            android:id="@+id/etDocTypeSendDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:hint="Tipo de Adjunto" />

        <Spinner
            android:id="@+id/spDocCity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAttachDoc"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/sophosPink"
            android:text="Documento"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_btn_attach"
            android:paddingStart="16dp"
            android:textStyle="bold"
            android:background="@drawable/border_btn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="40dp"
            app:cornerRadius="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendDoc"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/sophosPink"
            android:background="@drawable/border_btn2"
            android:text="Enviar"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAttachDoc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>